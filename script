banner_image = Image("banner.png");

screen_width = Window.GetWidth();
screen_height = Window.GetHeight();

resized_banner_image = wallpaper_image.Scale(screen_width / 2,screen_height / 2);
banner_sprite = Sprite(resized_wallpaper_image);

centred_sprite.SetX (screen_width  / 2 - resized_banner_image.GetWidth()  / 2);
centred_sprite.SetY (screen_height / 2 - resized_banner_image.GetHeight() / 2);
banner_sprite.SetZ(100);